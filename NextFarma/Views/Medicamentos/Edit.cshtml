@model NextFarma.Models.Medicamento

@{
    ViewData["Title"] = "Editar Medicamento";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    :root {
        --primary-green: #00B341;
        --secondary-green: #1B5E20;
        --light-bg: #F5F7F5;
        --white: #FFFFFF;
        --shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        --border-radius: 15px;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--light-bg);
    }

    h2 {
        color: var(--secondary-green);
        font-weight: 700;
        margin-bottom: 30px;
        text-align: center;
    }

    .form-card {
        background-color: var(--white);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 40px;
        max-width: 600px; /* Largura ideal para formulários menores */
        margin: 40px auto;
    }

    .form-label {
        color: var(--secondary-green);
        font-weight: 600;
        margin-bottom: 8px;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 12px;
        background-color: #f8f9fa;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 0.2rem rgba(0, 179, 65, 0.25);
        }

    .btn-save {
        background-color: var(--primary-green);
        color: white;
        border-radius: 10px;
        padding: 12px;
        font-weight: 700;
        border: none;
        width: 100%;
        margin-top: 20px;
        transition: transform 0.2s;
    }

        .btn-save:hover {
            background-color: #009e3a;
            transform: translateY(-2px);
            color: white;
        }

    .link-back {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: var(--secondary-green);
        text-decoration: none;
        font-weight: 600;
    }

        .link-back:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <div class="form-card">
        <h2>Editar Medicamento</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome do Medicamento</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Concentracao" class="form-label">Concentração</label>
                <input asp-for="Concentracao" class="form-control" placeholder="Ex: 500mg" />
                <span asp-validation-for="Concentracao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoria (Lista)</label>
                <select asp-for="CategoriaId" class="form-select" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Descricao"))">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-save">Salvar Alterações</button>

            <a asp-controller="Admin" asp-action="Medicines" class="link-back">Voltar para a lista</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}