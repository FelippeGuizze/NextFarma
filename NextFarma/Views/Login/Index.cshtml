@model NextFarma.Models.Usuario

@{
    ViewData["Title"] = "Acesso ao Sistema";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NextFarma</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="images/principal/favicon.ico">

    <style>
        :root {
            --primary-green: #00B341; /* Verde Vibrante (Botão Entrar) */
            --dark-green: #1B5E20; /* Verde Escuro (Texto/Botão Cadastrar) */
            --input-bg: #D9D9D9; /* Cinza dos Inputs */
            --card-bg: #f2f2f2; /* Fundo do Card (Levemente cinza) */
            --white: #FFFFFF;
            --shadow: 0 10px 15px rgba(0, 0, 0, 0.15);
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--white);
            margin: 0;
            padding: 0;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
            display: flex;
            align-items: center; /* Centraliza verticalmente o card */
        }

        /* --- HEADER (Aba Branca + Barra Verde) --- */
        .custom-header {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100px; /* Altura exata da imagem */
            background-color: var(--primary-green);
            z-index: 10;
            display: flex;
            align-items: flex-end; /* Alinha a aba na base se precisar */
        }

        .header-logo-tab {
            background-color: var(--white);
            height: 100%;
            width: 380px; /* Largura da aba */
            border-top-right-radius: 60px; /* A curva arredondada */
            display: flex;
            align-items: center;
            padding-left: 60px; /* Espaço da esquerda */
        }

        .header-logo {
            width: 200px;
            height: auto;
            object-fit: contain;
        }

        /* --- IMAGEM DE FUNDO (Médico) --- */
        .bg-doctor {
            position: absolute;
            right: 0;
            top: 0;
            height: 100vh;
            width: 65%; /* Ocupa 65% da tela na direita */
            object-fit: cover;
            z-index: 1; /* Fica atrás do card, mas na frente do body */
        }

        /* --- CARD DE LOGIN --- */
        .login-card {
            background-color: var(--card-bg);
            padding: 40px;
            border-radius: 20px;
            box-shadow: var(--shadow);
            width: 420px;
            /* Posicionamento Fixo na Esquerda */
            position: relative;
            z-index: 20; /* Fica acima de tudo */
            margin-left: 10%; /* Distância da esquerda */
            margin-top: 60px; /* Compensa o header */

            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .login-title {
            color: var(--dark-green);
            font-size: 32px;
            font-weight: 800;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-group {
            width: 100%;
            margin-bottom: 15px;
        }

        /* Estilo dos Inputs (Cinza arredondado) */
        .custom-input {
            width: 100%;
            height: 55px;
            background-color: var(--input-bg);
            border: none;
            border-radius: 10px;
            padding: 0 20px;
            font-size: 16px;
            color: var(--dark-green);
            font-weight: 500;
            outline: none;
            box-sizing: border-box;
        }

            .custom-input::placeholder {
                color: var(--dark-green);
                opacity: 0.8;
            }

        /* Checkbox */
        .form-check {
            width: 100%;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 10px;
            margin-bottom: 25px;
            padding-left: 5px;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            border: 2px solid var(--dark-green);
            cursor: pointer;
            border-radius: 4px;
            margin: 0;
        }

            .form-check-input:checked {
                background-color: var(--dark-green);
                border-color: var(--dark-green);
            }

        .form-check-label {
            color: var(--dark-green);
            font-weight: 700;
            font-size: 14px;
            cursor: pointer;
        }

        /* Botões */
        .btn-custom {
            width: 100%;
            height: 55px;
            border-radius: 10px; /* Bordas menos arredondadas que o header, igual foto */
            border: none;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: transform 0.2s;
            margin-bottom: 15px;
            color: var(--white);
        }

            .btn-custom:hover {
                opacity: 0.9;
                transform: translateY(-2px);
            }

        /* Cores Específicas dos Botões */
        .btn-login {
            background-color: var(--primary-green);
        }
        /* Verde Claro */
        .btn-register {
            background-color: var(--dark-green);
        }
        /* Verde Escuro */

        /* Mensagens de Erro */
        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 10px;
            border-radius: 8px;
            width: 100%;
            margin-bottom: 15px;
            text-align: center;
            font-size: 14px;
        }

        /* Responsividade Mobile */
        @@media (max-width: 900px) {
            .bg-doctor {
                opacity: 0.15;
                width: 100%;
            }
            /* Imagem clareia no fundo */
            .login-card {
                margin-left: auto;
                margin-right: auto;
                width: 90%;
            }

            .header-logo-tab {
                width: 100%;
                border-radius: 0;
                justify-content: center;
                padding: 0;
            }

            .custom-header {
                height: 80px;
            }
        }
    </style>
</head>
<body>

    <div class="custom-header">
        <div class="header-logo-tab">
            <img src="https://api.builder.io/api/v1/image/assets/TEMP/e352d0fa2f32f43eface12d3d8b3b6ee147c911c?width=560"
                 alt="NextPharma Logo"
                 class="header-logo" />
        </div>
    </div>

    <img src="https://api.builder.io/api/v1/image/assets/TEMP/00a4febee93f6a9f2b6b04840fd068728d2412bd?width=2238"
         alt="Médico Background"
         class="bg-doctor" />

    <div class="login-card">
        <h1 class="login-title">Bem-vindo</h1>

        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger">@ViewBag.Erro</div>
        }

        <form asp-controller="Login" asp-action="Logar" method="post" style="width: 100%;">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input asp-for="Email" class="custom-input" placeholder="Login..." required />
            </div>

            <div class="form-group">
                <input asp-for="Senha" type="password" class="custom-input" placeholder="Senha..." required />
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe" value="true" />
                <label class="form-check-label" for="rememberMe">Manter conectado</label>
            </div>

            <button type="submit" class="btn-custom btn-login">
                Entrar
            </button>

            <a asp-controller="Cadastro" asp-action="Index" class="btn-custom btn-register" style="display:flex; align-items:center; justify-content:center; text-decoration:none;">
                Cadastrar
            </a>
        </form>
    </div>

</body>
</html>