@model NextFarma.Models.Usuario

@{
    ViewData["Title"] = "Acesso ao Sistema";
}

<div class="text-center" style="margin-top: 50px;">
    <h2>Bem-vindo ao NextFarma</h2>
    <hr />

    @if (ViewBag.Erro != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Erro
        </div>
    }

    <form asp-controller="Login" asp-action="Logar" method="post" style="max-width: 300px; margin: auto;">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" placeholder="Digite seu email" required />
        </div>

        <div class="form-group mb-3">
            <label>Senha</label>
            <input asp-for="Senha" type="password" class="form-control" placeholder="Digite sua senha" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Logar</button>

        <div class="mt-3 text-center">
            <span>Ainda não tem conta?</span><br />
            <a asp-controller="Cadastro" asp-action="Index" class="btn btn-outline-secondary btn-sm mt-1">Criar Conta Nova</a>
        </div>
    </form>
</div>