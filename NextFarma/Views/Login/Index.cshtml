@model NextFarma.Models.Usuario

@{
    ViewData["Title"] = "Acesso ao Sistema";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NextFarma</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-green: #51AF32;
            --secondary-green: #31691E;
            --gray-light: #D9D9D9;
            --white: #FFFFFF;
            --shadow: 0 10px 4px 0 rgba(0, 0, 0, 0.25);
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            padding-left: 10%;
            overflow: hidden;
            position: relative;
        }

        /* --- NOVO HEADER (Estilo Aba) --- */
        .custom-header {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 90px; /* Altura da barra verde */
            background-color: #00B341; /* Verde vibrante da imagem */
            z-index: 100;
            display: flex;
            align-items: center;
        }

        .header-logo-tab {
            background-color: #ffffff; /* Fundo branco da logo */
            height: 100%;
            width: 350px; /* Largura da área branca */
            /* O segredo da curva: arredonda apenas o canto superior direito */
            border-top-right-radius: 50px;
            display: flex;
            align-items: center;
            padding-left: 10%; /* Alinha com o conteúdo da página */
            position: relative;
        }

        .header-logo {
            width: 180px; /* Tamanho da logo */
            height: auto;
            object-fit: contain;
        }
        /* -------------------------------- */

        .bg-doctor {
            position: absolute;
            right: 0;
            top: 0;
            height: 100vh;
            width: auto;
            max-width: 65%;
            object-fit: cover;
            z-index: -1;
        }

        .login-card {
            background-color: var(--white);
            padding: 40px;
            border-radius: 20px;
            box-shadow: var(--shadow);
            width: 100%;
            max-width: 450px;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 1;
            margin-top: 60px; /* Espaço para não colar no header */
        }

        .login-title {
            color: var(--secondary-green);
            font-size: 32px;
            font-weight: 800;
            margin-bottom: 40px;
            text-align: center;
        }

        .form-group {
            width: 100%;
            margin-bottom: 20px;
        }

        .custom-input {
            width: 100%;
            height: 60px;
            background-color: var(--gray-light);
            border: none;
            border-radius: 20px;
            padding: 0 25px;
            font-size: 16px;
            color: var(--secondary-green);
            font-weight: 500;
            outline: none;
            box-sizing: border-box;
        }

            .custom-input::placeholder {
                color: var(--secondary-green);
                opacity: 0.7;
            }

            .custom-input:focus {
                border: 2px solid var(--primary-green);
            }

        .form-check {
            width: 100%;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 30px;
            padding-left: 10px;
        }

        .form-check-input {
            width: 25px;
            height: 25px;
            border: 2px solid var(--secondary-green);
            cursor: pointer;
            accent-color: var(--secondary-green);
        }

        .form-check-label {
            color: var(--secondary-green);
            font-weight: 700;
            font-size: 16px;
            cursor: pointer;
        }

        .btn-custom {
            width: 100%;
            height: 60px;
            border-radius: 20px;
            border: none;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: opacity 0.3s, transform 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            margin-bottom: 15px;
            box-sizing: border-box;
        }

            .btn-custom:hover {
                opacity: 0.9;
                transform: translateY(-2px);
            }

        .btn-login {
            background-color: var(--primary-green);
            color: var(--white);
        }

        .btn-register {
            background-color: var(--secondary-green);
            color: var(--white);
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            padding: 15px;
            border-radius: 10px;
            width: 100%;
            margin-bottom: 20px;
            text-align: center;
        }

        @@media (max-width: 768px) {
            body {
                justify-content: center;
                padding-left: 0;
            }

            .bg-doctor {
                opacity: 0.2;
                max-width: 100%;
            }

            .login-card {
                width: 90%;
            }

            .header-logo-tab {
                width: 100%;
                border-radius: 0;
                justify-content: center;
                padding: 0;
            }

            .custom-header {
                height: 70px;
                background-color: white;
                border-bottom: 2px solid var(--primary-green);
            }
        }
    </style>
</head>
<body>

    <div class="custom-header">
        <div class="header-logo-tab">
            <img src="https://api.builder.io/api/v1/image/assets/TEMP/e352d0fa2f32f43eface12d3d8b3b6ee147c911c?width=560"
                 alt="NextPharma Logo"
                 class="header-logo" />
        </div>
    </div>

    <img src="https://api.builder.io/api/v1/image/assets/TEMP/00a4febee93f6a9f2b6b04840fd068728d2412bd?width=2238"
         alt="Background Médico"
         class="bg-doctor" />

    <div class="login-card">
        <h1 class="login-title">Bem-vindo</h1>

        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Erro
            </div>
        }

        <form asp-controller="Login" asp-action="Logar" method="post" style="width: 100%;">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input asp-for="Email" class="custom-input" placeholder="Login..." required />
            </div>

            <div class="form-group">
                <input asp-for="Senha" type="password" class="custom-input" placeholder="Senha..." required />
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe" value="true" />
                <label class="form-check-label" for="rememberMe">Manter conectado</label>
            </div>

            <button type="submit" class="btn-custom btn-login">
                Entrar
            </button>

            <a asp-controller="Cadastro" asp-action="Index" class="btn-custom btn-register">
                Cadastrar
            </a>
        </form>
    </div>

</body>
</html>