@model IEnumerable<NextFarma.Models.Prontuario>
@using NextFarma.Helpers

@{
    ViewData["Title"] = "Histórico de Prontuários";
    var page = ViewBag.Page as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var q = ViewBag.Query as string ?? string.Empty;
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    :root {
        --primary-green: #00B341;
        --secondary-green: #1B5E20;
        --light-bg: #F5F7F5;
        --white: #FFFFFF;
        --shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        --border-radius: 15px;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--light-bg);
    }

    h2 {
        color: var(--secondary-green);
        font-weight: 700;
    }

    .dashboard-container {
        background-color: var(--white);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 30px;
        margin-top: 20px;
        margin-bottom: 40px;
    }

    .custom-search-input {
        border-radius: 20px 0 0 20px;
        border: 1px solid #ced4da;
        background-color: #f8f9fa;
        padding-left: 20px;
    }

    .custom-search-btn {
        border-radius: 0 20px 20px 0;
        background-color: var(--secondary-green);
        color: white;
        border: 1px solid var(--secondary-green);
    }

        .custom-search-btn:hover {
            background-color: var(--primary-green);
            border-color: var(--primary-green);
            color: white;
        }

    .btn-add-new {
        background-color: var(--primary-green);
        color: white;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 600;
        border: none;
        transition: transform 0.2s;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
    }

        .btn-add-new:hover {
            background-color: #009e3a;
            transform: translateY(-2px);
            color: white;
        }

    .custom-table {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
        margin-top: 10px;
    }

        .custom-table thead th {
            background-color: var(--secondary-green);
            color: white;
            padding: 15px;
            font-weight: 600;
            border: none;
        }

            .custom-table thead th:first-child {
                border-radius: 10px 0 0 0;
            }

            .custom-table thead th:last-child {
                border-radius: 0 10px 0 0;
            }

        .custom-table tbody td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #eee;
            color: #333;
        }

        .custom-table tbody tr:hover {
            background-color: #f0fdf4;
        }

    .btn-action-edit {
        color: var(--secondary-green);
        border: 1px solid var(--secondary-green);
        border-radius: 8px;
        font-size: 0.85rem;
        margin-right: 5px;
        text-decoration: none;
        padding: 4px 8px;
    }

        .btn-action-edit:hover {
            background-color: var(--secondary-green);
            color: white;
        }

    .btn-action-delete {
        color: #dc3545;
        border: 1px solid #dc3545;
        border-radius: 8px;
        font-size: 0.85rem;
        background: transparent;
        padding: 4px 8px;
    }

        .btn-action-delete:hover {
            background-color: #dc3545;
            color: white;
        }

    .page-link {
        color: var(--secondary-green);
    }

    .page-item.active .page-link {
        background-color: var(--primary-green);
        border-color: var(--primary-green);
    }
</style>

<div class="container">
    <div class="dashboard-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Prontuários e Receitas</h2>
        </div>

        <form method="get" asp-action="Records" class="mb-3">
            <div class="input-group">
                <input class="form-control custom-search-input" name="q" value="@q" placeholder="Buscar por paciente, notificação ou CID..." />
                <button class="btn custom-search-btn" type="submit">Buscar</button>
            </div>
        </form>

        <a class="btn-add-new" asp-action="CreateRecord">+ Nova Prescrição</a>

        <div class="table-responsive">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Emissão</th>
                        <th>Notificação</th>
                        <th>Paciente</th>
                        <th>Medicamento</th>
                        <th>CID</th>
                        <th>Validade</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        bool vencida = DateTime.Now > item.DataValidade;
                        <tr>
                            <td>@item.DataEmissao.ToString("dd/MM/yyyy")</td>
                            <td style="font-weight: 600; color: var(--primary-green);">@item.NumeroNotificacao</td>
                            <td>@(item.Paciente?.Nome ?? "N/A")</td>
                            <td>
                                @(item.Medicamento?.Nome ?? "N/A")
                                <small class="text-muted d-block">@item.Medicamento?.Concentracao</small>
                            </td>
                            <td>@item.CID</td>
                            <td>
                                @if (vencida)
                                {
                                    <span class="text-danger fw-bold">@item.DataValidade.ToString("dd/MM/yyyy")</span>
                                    <small class="d-block text-danger">(Vencida)</small>
                                }
                                else
                                {
                                    <span class="text-success">@item.DataValidade.ToString("dd/MM/yyyy")</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-action-edit" asp-action="EditRecord" asp-route-id="@item.Id">Editar</a>
                                <form asp-action="DeleteRecord" asp-route-id="@item.Id" method="post" style="display:inline">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-action-delete" type="submit" onclick="return confirm('Excluir este prontuário?')">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link" href="?q=@q&page=@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>