@model NextFarma.Models.Usuario

@{
    ViewData["Title"] = "Criar Nova Conta";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NextFarma</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            /* Cores extraídas do Register.css */
            --primary-green: #51AF32;
            --secondary-green: #31691E;
            --gray-light: #D9D9D9;
            --white: #FFFFFF;
            --shadow: 0 10px 4px 0 rgba(0, 0, 0, 0.25);
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: flex-start; /* Alinha o card à esquerda */
            min-height: 100vh;
            padding-left: 10%; /* Espaço lateral igual ao do login */
            overflow: hidden;
            position: relative;
        }

        /* IMAGEM DE FUNDO (Médico escrevendo) */
        .bg-register {
            position: absolute;
            right: 0;
            top: 0;
            height: 100vh;
            width: auto;
            max-width: 65%;
            object-fit: cover;
            z-index: -1;
        }

        /* CARD DO FORMULÁRIO */
        .register-card {
            background-color: var(--white);
            padding: 40px;
            border-radius: 20px;
            box-shadow: var(--shadow);
            width: 100%;
            max-width: 450px;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 1;
        }

        .register-title {
            color: var(--secondary-green); /* Verde escuro conforme o design */
            font-size: 32px;
            font-weight: 800;
            margin-bottom: 30px;
            text-align: center;
        }

        /* ESTILO DOS INPUTS */
        .form-group {
            width: 100%;
            margin-bottom: 20px;
        }

        /* Labels para Data e Perfil (Verde Escuro) */
        .custom-label {
            color: var(--secondary-green);
            font-weight: 700;
            font-size: 16px;
            margin-bottom: 8px;
            display: block;
            text-align: left;
            padding-left: 10px;
        }

        .custom-input {
            width: 100%;
            height: 60px;
            background-color: var(--gray-light);
            border: none;
            border-radius: 20px;
            padding: 0 25px;
            font-size: 16px;
            color: var(--secondary-green);
            font-weight: 500;
            outline: none;
            box-sizing: border-box;
            appearance: none; /* Remove estilo padrão de data/select */
        }

            .custom-input::placeholder {
                color: var(--secondary-green);
                opacity: 0.7;
            }

            .custom-input:focus {
                border: 2px solid var(--primary-green);
            }

        /* BOTÃO CADASTRAR */
        .btn-custom {
            width: 100%;
            height: 60px;
            border-radius: 20px;
            border: none;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: opacity 0.3s, transform 0.2s;
            margin-top: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Usando a cor escura para o botão cadastrar conforme a imagem image_37b649.png */
        .btn-register-action {
            background-color: var(--secondary-green);
            color: var(--white);
        }

            .btn-register-action:hover {
                opacity: 0.9;
                transform: translateY(-2px);
            }

        /* Link de voltar */
        .link-back {
            margin-top: 20px;
            color: var(--secondary-green);
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
        }

            .link-back:hover {
                text-decoration: underline;
            }

        /* Mensagens de erro */
        .text-danger {
            color: #dc3545;
            font-size: 12px;
            margin-left: 15px;
            margin-top: 5px;
            display: block;
        }

        /* Responsividade */
        @@media (max-width: 768px) {
            body {
                justify-content: center;
                padding-left: 0;
            }

            .bg-register {
                opacity: 0.2;
                max-width: 100%;
            }

            .register-card {
                width: 90%;
            }
        }
    </style>
</head>
<body>

    <img src="https://api.builder.io/api/v1/image/assets/TEMP/e381ba32dc827e93861ac070a52190f6f05ee9d2?width=2440"
         alt="Background Cadastro"
         class="bg-register" />

    <div class="register-card">
        <h1 class="register-title">Criar nova conta</h1>

        <form asp-controller="Cadastro" asp-action="Cadastrar" method="post" style="width: 100%;">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input asp-for="Email" class="custom-input" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Senha" type="password" class="custom-input" placeholder="Senha..." />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirthDate" class="custom-label">Data de nascimento</label>
                <input asp-for="BirthDate" type="date" class="custom-input" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="custom-label">Tipo de perfil</label>
                <select asp-for="Type" class="custom-input"
                        asp-items="Html.GetEnumSelectList<NextFarma.Models.PeopleType>()">
                    <option selected="selected" value="">Selecione...</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-custom btn-register-action">
                Cadastrar
            </button>

            <div style="text-align: center;">
                <a asp-controller="Login" asp-action="Index" class="link-back">Voltar para Login</a>
            </div>

        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>